@{
    ViewData["Title"] = "Create Page";
    Layout = null;
}
@model GssZenicaApp.ViewModels.AddMembershipFeeViewModel
<form asp-action="Create" class="form-horizontal" asp-controller="MembershipFee" onsubmit="return jQueryAjaxPost(this);">
    <div class="form-group">
        <label>Datum članarine: </label>
        <input asp-for="DateOfFee" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Izaberi clana</label>
        <select asp-for="MemberId" class="form-control" asp-items="@Model.MemberList">
            <option value="" selected disabled>--  Odaberite clana  --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Izaberi vrstu clanarine</label>
        <select asp-for="MembershipFeeCategoryId" class="form-control" asp-items="@Model.MembershipFeeCategoryList">
            <option value="" selected disabled>--  Odaberite clanarinu  --</option>
        </select>
    </div>
    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <input type="submit" value="Snimi" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>