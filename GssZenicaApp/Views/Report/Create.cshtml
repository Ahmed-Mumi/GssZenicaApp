@{
    ViewData["Title"] = "Edit Page";

}
@model GssZenicaApp.ViewModels.AddReportViewModel
<h1 style="text-align:center">Dodaj izvještaj</h1>
<form asp-controller="Report" asp-action="Create" class="form-horizontal" method="post" autocomplete="off">
    <input type="hidden" asp-for="StationActivityId" />
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-3 control-label">Tekst izvještaja: </label>
                <div class="col-md-9">
                    <textarea asp-for="Text" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Lokacija aktivnosti: </label>
                <div class="col-md-9">
                    <input asp-for="Location" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Datum aktivnosti: </label>
                <div class="col-md-9">
                    <input asp-for="DateOfActivity" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Datum izvještaja: </label>
                <div class="col-md-9">
                    <input asp-for="DateOfReport" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Izvještaj podnio: </label>
                <div class="col-md-9">
                    <select asp-for="MemberId" class="form-control" asp-items="@Model.MemberList">
                        <option value="" selected disabled>--  Odaberite člana  --</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Snimi" />
            </div>
        </div>
    </div>
</form>

